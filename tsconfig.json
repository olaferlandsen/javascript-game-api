{
	"compilerOptions":{
        "moduleResolution": "node",
        "target": "es6",
        "module": "none",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "sourceRoot": "./src/",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "lib": [ "es6", "dom" ],
        "jsx": "react",
        "allowJs": false
    },
    "include": [
        "./src/**/*.ts",
        "./typings/**/*.d.ts"
    ],
    "exclude": [
        "build",
        "docs",
        "node_modules"
    ],
	"compileOnSave": false

}
